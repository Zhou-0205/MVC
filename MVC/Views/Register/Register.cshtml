@model SRV.ViewModel.RegisterModel
@{
    ViewBag.Title = "注册";
    Layout = "~/Views/Shared/_User.cshtml";
}
<style>
    .field-validation-error {
        color: red;
        font-size: 12px;
    }
</style>
@using (Html.BeginForm())
{
    <div>
        <label>邀请人：(*必填)</label>
        @Html.TextBoxFor(m => m.InvitedBy.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.InvitedBy.Name)
    </div>
    <div>
        <label>邀请码：(*必填)</label>
        @Html.TextBoxFor(m => m.InvitedBy.InviteCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.InvitedBy.InviteCode)
    </div>
    <div>
        <label>用户名：(*必填)</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div>
        <label>密码：(*必填)</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div>
        <label>确认密码：(*必填)</label>
        @Html.TextBoxFor(m => m.ConfirmPassWord, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassWord)
    </div>
    <div style="margin-top:20px;">
        <button type="submit" class="btn btn-primary">提交</button>
        <button type="reset" class="btn btn-light">重置</button>
    </div>
}
@section User
{

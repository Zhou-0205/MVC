@model MVC.Models.RegisterModel
@{
    ViewBag.Title = "Index";
}

<h2>注册</h2>
@using (Html.BeginForm())
{
    <div>
        <label>用户</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div>
        <label>密码</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
    </div>

    <div>
        <label>确认密码</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
    </div>

    <button type="submit">提交</button>
}




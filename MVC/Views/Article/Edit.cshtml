@model SRV.ViewModel.EditModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <div>
        <label>标题</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div>
        <label>正文</label><br />
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
    </div>
    <div>
        <button type="submit">修改</button>
    </div>
}

